<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondappac"
    tools:context=".Login">

    <TextView
        android:id="@+id/lblUsuarioLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblUsuarioLogin"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/lblClaveLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblClaveLogin"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtClaveLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lblUsuarioLogin"
        app:layout_constraintTop_toBottomOf="@+id/lblUsuarioLogin"
        app:layout_constraintVertical_bias="0.077" />

    <EditText
        android:id="@+id/txtUsuarioLogin"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="@string/txtUsuarioLogin"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toEndOf="@+id/lblUsuarioLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/txtClaveLogin"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="@string/txtClaveLogin"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtUsuarioLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtUsuarioLogin"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuarioLogin"
        app:layout_constraintVertical_bias="0.038" />

    <Switch
        android:id="@+id/swMantenerSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swMantenerSesionLogin"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblClaveLogin"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/btnEntrarLogin"
        style="@style/estiloBotonPrincipal"
        android:background="@drawable/botonprincipal"
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:text="@string/btnEntrarLogin"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swMantenerSesion"
        app:layout_constraintVertical_bias="0.129" />

    <ProgressBar
        android:id="@+id/cargaLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="125dp"
        android:layout_height="128dp"
        android:indeterminateTint="@color/azulC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRecordarClave"
        app:layout_constraintVertical_bias="0.254" />

    <Button
        android:id="@+id/btnRegistrarLogin"
        style="@style/estiloBotonSecundario"
        android:layout_width="192dp"
        android:layout_height="45sp"
        android:background="@drawable/botonsecundario"
        android:text="@string/btnRegistrarLogin"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRecordarClave"
        app:layout_constraintVertical_bias="0.867" />

    <TextView
        android:id="@+id/lblRecordarClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRecordarClaveLogin"
        android:textColor="@color/azulO"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEntrarLogin"
        app:layout_constraintVertical_bias="0.084" />

    <ImageView
        android:id="@+id/imgOjoLogin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtClaveLogin"
        app:layout_constraintEnd_toEndOf="@+id/txtClaveLogin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtClaveLogin"
        app:layout_constraintTop_toTopOf="@+id/txtClaveLogin"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/ic_ojo" />

</androidx.constraintlayout.widget.ConstraintLayout>