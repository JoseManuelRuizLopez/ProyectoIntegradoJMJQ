<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/gridviewdata"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="8dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="30dp">


            <ImageView
                android:id="@+id/imgTablaInicioCv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/senora"></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/lblMensajeCv"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombreCv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/lblNombreCv"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/view2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/view2" />

        <TextView
            android:id="@+id/lblHora"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/view2" />

        <ImageView
            android:id="@+id/imgNotificadoCv"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="37dp"
            tools:ignore="VectorDrawableCompat" />


    </RelativeLayout>

</RelativeLayout>